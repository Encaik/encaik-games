{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "paths": {
    // 根据别名配置相关路径
    "@util/*": ["./src/util/*"],
    "@views/*": ["./src/views/*"],
    "@layouts/*": ["./src/layouts/*"]
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
